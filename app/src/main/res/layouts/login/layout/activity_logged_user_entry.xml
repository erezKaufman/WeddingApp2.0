<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login_pages.Logged_user_entryActivity"
    android:background="@drawable/wedback"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/chartLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        >
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/david_libre"
            android:gravity="right"
            android:text="@string/welcome_text"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"
            tools:layout_editor_absoluteY="53dp" />
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/balance"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/amount"
                android:textAlignment="viewEnd"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/your_balance_text"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cost_so_far"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="134dp"
                tools:layout_editor_absoluteY="0dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"
            tools:layout_editor_absoluteY="53dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/horizontalBusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/david_libre"
                android:text="אולי ימצא חן בעיניך "
                android:textSize="18sp"
                android:textStyle="bold" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/suggestion_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_field"
                >

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <ImageView
            android:id="@+id/weedingHello"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="4"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="53dp" />
        <Button
            android:id="@+id/gotoSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gotosearch"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="398dp" />

        <Button
            android:id="@+id/gotoPersonalZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/goto_pzone_string"
            tools:layout_editor_absoluteX="257dp"
            tools:layout_editor_absoluteY="341dp" />

        <Button
            android:id="@+id/goto_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="לך לרשימת משימות"
            tools:layout_editor_absoluteX="257dp"
            tools:layout_editor_absoluteY="341dp" />


    </LinearLayout>


</LinearLayout>


