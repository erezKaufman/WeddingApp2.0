<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/set_appointment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/david_libre"
        android:text="@string/set_appointment_text"
        android:textSize="24sp"
        android:gravity="center"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/createCalendarEvent"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/david_libre"
        android:text="@string/createCalendarEvent"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="8dp"
        android:gravity="center"
        tools:layout_editor_absoluteY="232dp" />

    <Button
        android:id="@+id/gotoTodos"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/david_libre"
        android:text="@string/gotoTodos"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="8dp"
        android:gravity="center"
        tools:layout_editor_absoluteY="184dp" />

    <Button
        android:id="@+id/addValueToChart"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/david_libre"
        android:text="@string/addValueToChart"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="8dp"
        android:gravity="center"
        tools:layout_editor_absoluteY="280dp" />


    <LinearLayout
        android:id="@+id/add_amount_linealayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/textlastAmmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="צפי להוצאות היה"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lastAmmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textCurAmmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="כעת"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/curAmmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                android:text="@string/add_amount_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>
            <Button
                android:id="@+id/accept"
                android:text="@string/accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                />
        </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mailInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/david_libre"
                android:gravity="right"
                android:text="test"
                android:textIsSelectable="true"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="129dp"
                android:layout_height="29dp"
                android:layout_marginBottom="140dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.937"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/mailImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_dialog_email"
                    tools:layout_editor_absoluteX="249dp"
                    tools:layout_editor_absoluteY="389dp" />

                <TextView
                    android:id="@+id/mailText"
                    android:layout_width="84dp"
                    android:layout_height="26dp"
                    android:fontFamily="@font/david_libre"
                    android:gravity="right"
                    android:text="פרטי מייל"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="389dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/listViewPhone"
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:divider="#0000CC"
                android:dividerHeight="0.1dp"></ListView>

            <LinearLayout
                android:layout_width="129dp"
                android:layout_height="29dp"
                android:layout_marginBottom="104dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.937"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/phoneImage"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/stat_sys_speakerphone"
                    tools:layout_editor_absoluteX="249dp"
                    tools:layout_editor_absoluteY="389dp" />

                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="84dp"
                    android:layout_height="26dp"
                    android:fontFamily="@font/david_libre"
                    android:gravity="right"
                    android:text="פרטי טלפון"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="389dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>





