<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_in_and_info">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp">

                <EditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:id="@+id/editTextAge"
                    android:labelFor="@+id/editTextAge" />

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="casual"
                    android:text="@string/Age"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <Spinner
                    android:id="@+id/area_spinner"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:entries="@array/israel_areas"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/textViewArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="casual"
                    android:text="@string/living_area"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp">

                <Spinner
                    android:id="@+id/type_spinner"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:entries="@array/occasions_types"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/textViewType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="15dp"
                    android:fontFamily="casual"
                    android:text="@string/Oc_type_string"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <EditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:id="@+id/editTextNumber"
                    android:labelFor="@+id/editTextNumber" />

                <TextView
                    android:id="@+id/textViewNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="15dp"
                    android:fontFamily="casual"
                    android:text="@string/number_of_guests"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <Spinner
                    android:id="@+id/season_spinner"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:entries="@array/Season"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/textViewSSeason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="casual"


                    android:text="@string/Season"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <EditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:id="@+id/editTextCost"
                    android:labelFor="@+id/editTextCost" />

                <TextView
                    android:id="@+id/textViewSCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="casual"
                    android:text="@string/Cost"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/gobacktomain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/back_to_search"
                    android:layout_weight="0.5"/>
                <Button
                    android:id="@+id/gotosignin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/click_to_save_changes"
                    android:layout_weight="0.5"/>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</RelativeLayout>